<Window x:Class="Retangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retangle"
        mc:Ignorable="d"
        Title="Rectangle" Height="450" Width="800">
    <Grid x:Name="Grid1" KeyDown="KeyDown1">
        <Canvas x:Name="rectangle" Width="0" Height="0" Background='Aqua' Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,225">
            <Canvas.RenderTransform>
                <RotateTransform></RotateTransform>
            </Canvas.RenderTransform>
        </Canvas>
        <TextBox x:Name="StartSize" HorizontalAlignment="Left" Height="30" Margin="24,50,0,0" Text="     Длина стороны" VerticalAlignment="Top" Width="280" FontSize="20"/>
        <TextBox x:Name="StartHigh" HorizontalAlignment="Right" Height="30" Margin="0,50,9.6,0"  Text="     Координата Y" VerticalAlignment="Top" Width="280" FontSize="20"/>
        <Button x:Name="Start1" Height="50" Width="100" Content="Start" Margin="350,50" Click="Start_Click" VerticalAlignment="Top" />
        <Button x:Name="Switcher" Height="0" Width="0" VerticalAlignment="Top" Content="Switch" Click="Switch_Click" Margin="350,300,343.6,0" />

    </Grid>
</Window>
